<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="motherAnchor" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="703.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clickdigitalsolutions.rentverticalmenu.FXMLController">
    <center>
      <StackPane fx:id="mainStack">
         <children>
            <JFXTabPane fx:id="tabContainer" prefHeight="128.0" prefWidth="308.0" side="LEFT" stylesheets="@../styles/tabSpacing.css" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab fx:id="tenantDetailsTab" closable="false" text="User Profile" />
                  <Tab fx:id="paymentDetailsTab" closable="false" text="Logout" />
                  <Tab fx:id="repairsTab" closable="false" text="Settings" />
                  <Tab fx:id="monthlyExpensesTab" text="Untitled Tab" />
               </tabs>
            </JFXTabPane>
         </children>
      </StackPane>
   </center>
   <top>
       <MenuBar fx:id="rentalMenu" BorderPane.alignment="CENTER">
           <menus>
               <Menu mnemonicParsing="false" text="File">
                   <items>
                       <MenuItem fx:id="Search" mnemonicParsing="false" onAction="#searchAction" text="Search" />
                       <MenuItem fx:id="Save" mnemonicParsing="false" text="Save" />
                       <MenuItem fx:id="SaveAs" mnemonicParsing="false" text="Save As..." />
                       <MenuItem fx:id="Import" mnemonicParsing="false" text="Import" />
                       <MenuItem fx:id="print" mnemonicParsing="false" text="Print Receipt" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Edit">
                   <items>
                       <MenuItem fx:id="editTable" mnemonicParsing="false" text="Edit Table Entry" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Help">
                   <items>
                       <MenuItem fx:id="about" mnemonicParsing="false" text="About" />
                   </items>
               </Menu>
           </menus>
       </MenuBar>
   </top>
</BorderPane>
